{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Australia Airports",
    "fontSize": 24,  
    "font": "Arial",  
    "anchor": "middle"  
  },
  "projection": {
    "type": "mercator", 
    "scale": 630,
    "center": [135, -28]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yiqianee/FIT3179_hw_week9/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yiqianee/FIT3179_hw_week9/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yiqianee/FIT3179_hw_week9/main/data/au-airports.csv"
      },
      "transform": [
        {
          "calculate": "datum.type === 'large_airport' ? 'Large Airport' : datum.type === 'medium_airport' ? 'Medium Airport' : datum.type",
          "as": "airport_label"
        }
      ],
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude_deg", "type": "quantitative"},
        "latitude": {"field": "latitude_deg", "type": "quantitative"},
        "size": {
          "condition": {
            "test": "datum.type === 'large_airport'",  
            "value": 150  
          },
          "value": 50  
        },
        "color": {
          "field": "airport_label",  
          "type": "nominal",
          "title": "Airport Type",
          "scale": {
            "domain": ["Large Airport", "Medium Airport"],
            "range": ["red", "blue"]
          },
          "legend": {
            "title": "Airport Type",
            "labelFontSize": 14,
            "titleFontSize": 18
          }
        },
        "tooltip": [
          {"field": "name", "title": "Airport Name"},
          {"field": "region_name", "title": "Region Name"},
          {"field": "airport_label", "title": "Airport Type"}
          ]
      }
    }
  ]
}
